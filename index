  </main>

  <script>
    const pages = {
      home: document.getElementById("page-home"),
      model1: document.getElementById("page-model1"),
      model2: document.getElementById("page-model2"),
      model3: document.getElementById("page-model3"),
    };

    function setSelected(route) {
      document.querySelectorAll(".tab").forEach(btn => {
        const selected = btn.getAttribute("data-route") === route;
        btn.setAttribute("aria-selected", selected ? "true" : "false");
      });
    }

    function show(route) {
      Object.keys(pages).forEach(k => pages[k].classList.toggle("hidden", k !== route));
      setSelected(route);
      window.scrollTo({ top: 0, behavior: "smooth" });
      history.replaceState(null, "", "#" + route);
    }

    function routeTo(route) { show(route); }

    document.querySelectorAll(".tab").forEach(btn => {
      btn.addEventListener("click", () => show(btn.getAttribute("data-route")));
    });

    const initial = (location.hash || "#home").replace("#", "");
    show(pages[initial] ? initial : "home");
  </script>
